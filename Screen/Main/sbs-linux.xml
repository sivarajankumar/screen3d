<?xml version="1.0" encoding="UTF-8"?>
<pack>
	<properties>
		<name>Screen/Main</name>
		<version>0.1.0</version>
		<buildtype>shared</buildtype>
	</properties>
	<main>
		<dependencies>
			<dependency name="Screen/Utils" sbs="true" version="0.1.0"/>
			<dependency name="boost" version="1.42">
				<libraries>
					<lib>boost_thread</lib>
				</libraries>
			</dependency>
			<dependency name="DevIL">
				<libraries>
					<lib>IL</lib>
				</libraries>
			</dependency>
		</dependencies>
		<flags>
			<flag flag="SCREEN_MAIN_BUILD_SHARED_LIBRARY" config="all" />
		</flags>
	</main>
	<test>
		<dependencies>
			<dependency name="Screen/Main" sbs="true" version="0.1.0"/>
			<dependency name="Screen/Utils" sbs="true" version="0.1.0"/>
			<dependency name="boost" version="1.42">
				<libraries>
					<lib>boost_thread</lib>
				</libraries>
			</dependency>
			<dependency name="cppunit">
				<libraries>
					<lib>cppunit</lib>
				</libraries>
			</dependency>
		</dependencies>
	</test>
</pack>
