<?xml version="1.0" encoding="UTF-8"?>
<pack>
	<properties>
		<name>Screen/XML</name>
		<version>0.1.0</version>
		<buildtype>shared</buildtype>
	</properties>
	<main>
		<dependencies>
			<dependency name="Screen/Utils" sbs="true" root="${SCREEN_UTILS_ROOT}"/>
			<dependency name="boost" version="1.42">
				<includes>
					<path>${BOOST_INC_ROOT}</path>
				</includes>
				<libraries>
					<path>${BOOST_LIB_ROOT}</path>
					<lib>boost_thread</lib>
				</libraries>
			</dependency>
			<dependency name="xerces" version="3.1">
				<includes>
					<path>${XERCES_INC_ROOT}</path>
				</includes>
				<libraries>
					<path>${XERCES_LIB_ROOT}</path>
					<lib>xerces-c</lib>
				</libraries>
			</dependency>
		</dependencies>
		<flags>
			<flag flag="SCREEN_XML_BUILD_SHARED_LIBRARY" config="all" />
		</flags>
	</main>
</pack>
